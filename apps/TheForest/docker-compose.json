{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "sons-of-the-forest-dedicated-server",
      "image": "jammsen/sons-of-the-forest-dedicated-server:latest",
      "isMain": true,
      "internalPort": 8080,
      "addPorts": [
        {
          "hostPort": 8766,
          "containerPort": 8766,
          "interface": "${NETWORK_INTERFACE:-0.0.0.0}",
          "tcp": true
        },
        {
          "hostPort": 27016,
          "containerPort": 27016,
          "interface": "${NETWORK_INTERFACE:-0.0.0.0}",
          "tcp": true
        },
        {
          "hostPort": 9700,
          "containerPort": 9700,
          "interface": "${NETWORK_INTERFACE:-0.0.0.0}",
          "tcp": true
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/game",
          "containerPath": "/opt/sonsoftheforest"
        }
      ]
    }
  ]
}
